<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="PhotoBinding">
        <variable
            name="viewModel"
            type="com.alanchen.cloudinteractive_alanchen.viewmodel.PhotoViewModel" />
    </data>

    <com.alanchen.cloudinteractive_alanchen.layout.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="@{(view)->viewModel.itemClick(view, viewModel)}"
        android:clickable="true"
        android:focusable="true"
        >

        <ImageView
            android:id="@+id/pImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:image="@{viewModel.thumbnailUrl}"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/pId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(viewModel.id)}"
                android:textStyle="bold"
                android:textSize="28dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/pTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.title}"
                android:textSize="16dp"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

    </com.alanchen.cloudinteractive_alanchen.layout.SquareRelativeLayout>

</layout>